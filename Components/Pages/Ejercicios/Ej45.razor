@page "/ejercicio45"
@rendermode InteractiveServer 
<PageTitle>Ejercicio 45 - Repetición de un Valor en Matriz</PageTitle>

<h3>Ejercicio 45 - Repetición de un Valor en Matriz</h3>
<p>Ingrese una matriz de 4x4 y un valor a buscar:</p>

@for (int i = 0; i < 4; i++)
{
    @for (int j = 0; j < 4; j++)
    {
        <input type="number" @bind="matriz[i, j]" class="mb-2" />
    }
    <br />
}

<input type="number" @bind="valor" placeholder="Valor a buscar" />

<button class="btn btn-primary mt-2" @onclick="CalcularRepeticiones">Calcular</button>

@if (resultado != -1)
{
    <p class="mt-2">El valor @valor se repite @resultado veces en la matriz.</p>
}

@code {
    private int[,] matriz = new int[4, 4];
    private int valor;
    private int resultado = -1;

    private void CalcularRepeticiones()
    {
        resultado = ContarRepeticiones(matriz, valor);
    }

    private int ContarRepeticiones(int[,] matriz, int valor)
    {
        int count = 0;
        for (int i = 0; i < 4; i++)
        {
            for (int j = 0; j < 4; j++)
            {
                if (matriz[i, j] == valor)
                {
                    count++;
                }
            }
        }
        return count;
    }
}
