@page "/ejercicio9"
@rendermode InteractiveServer 
<PageTitle>Ejercicio 9 - Factorial</PageTitle>

<h3>Ejercicio 9 - Factorial</h3>
<p>Ingrese un número para calcular su factorial:</p>

<input type="number" @bind="numero" />
<button @onclick="CalcularFactorial">Calcular</button>

@if (resultado != null)
{
    <p>El factorial de @numero es: @resultado</p>
}

@code {
    private int numero;
    private long? resultado;

    private void CalcularFactorial()
    {
        resultado = CalcularFactorial(numero);
    }

    private long CalcularFactorial(int numero)
    {
        if (numero < 0) throw new ArgumentException("No se puede calcular el factorial de un número negativo.");
        long resultado = 1;
        for (int i = 1; i <= numero; i++)
        {
            resultado *= i;
        }
        return resultado;
    }
}
